<h2>Home</h2>

<ul class="p-0 m-0">

    {{#each posts as |post|}}
    <li class="postListItem row py-3" id="{{post.id}}">
        <div class="card w-100">
            <div class="card-header">
                <span class="float-left font-weight-bold">{{post.title}}</span>

                <span class="float-right">
                    Posted by: {{post.user.username}} on
                    {{post.created_at}}
                </span>
            </div>

            <div class="card-body">
                <p class="card-text">
                    {{post.post_content}}
                </p>


            </div>

            {{!-- remove d-none when it is time to comment on this. or... have a container div to put this into when needed... --}}
            <div class="card-footer d-none">
                <div class="border-bottom border-dark p-3">
                    <textarea class="w-100" id="commentInput{{post.id}}" placeholder="Write a comment here..."
                        style="height:100px"></textarea>
                    <button type="submit" class="submitComment btn btn-primary w-100">Add Comment</button>
                </div>


                {{!-- past comments --}}
                <div class="p-3 ">
                    <h3>Comments:</h3>
                    <ul class="p-0 m-0">
                        {{#each post.comments as |comment|}}
                        <li class="row border border-dark rounded-lg my-3 px-3 pt-2" id="C" +{{comment.id}}>
                            <div class="Container w-100">
                                <p class="font-weight-bold justify-content-between">
                                    <span class="float-left">{{comment.user.username}} </span>
                                    <span class="float-right">{{comment.created_at}}</span>
                                </p>

                                <p class="mt-3 pt-3">{{comment.comment_content}}</p>
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </li>
    {{/each}}

</ul>

<script src="/javascript/homePage.js"></script>