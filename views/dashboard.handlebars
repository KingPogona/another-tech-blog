<div class="row py-3 d-none" id="addPostContainer">
    <div class="card w-100">
        <div class="card-header">
            <span class="float-left font-weight-bold">Create A New Post:</span>
        </div>

        <div class="card-body">

            <form class="w-100" id="postForm">
                <div class="form-group">
                    <label for="postTitle">Title</label>
                    <input type="text" class="form-control" id="postTitle">
                </div>
                <div class="form-group">
                    <label for="postContent">Post Content</label>
                    <textarea class="w-100" id="postContent" placeholder="Write your post content here..."
                        style="height:100px"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
    </div>
</div>


<ul class="p-0 m-0" id="postList"></ul>

{{#each posts as |post|}}
<li class="postListItem row py-3" id="{{post.id}}">
    <div class="postCard card w-100">
        <div class="card-header">
            <span class="postTitle float-left font-weight-bold">{{post.title}}</span>

            <span class="float-right">
                Posted on: {{post.created_at}}
            </span>
        </div>

        <div class="card-body">
            <p class="postBody card-text">
                {{post.post_content}}
            </p>
        </div>
    </div>



    <div class="editPostContainer card w-100 d-none">
        <div class="card-header">
            <span class="float-left font-weight-bold">Edit Post:</span>
        </div>

        <div class="card-body">

            <form class="editPostForm w-100">
                <div class="form-group">
                    <label for="editPostTitle{{post.id}}">Title</label>
                    <input type="text" class="form-control" id="editPostTitle{{post.id}}">
                </div>
                <div class="form-group">
                    <label for="editPostContent{{post.id}}">Post Content</label>
                    <textarea class="w-100" id="editPostContent{{post.id}}" placeholder="Write your post content here..."
                        style="height:100px"></textarea>
                </div>
                <button type="button" class="editPostSubmit btn btn-primary">Submit</button>
                <button type="button" class="editPostDelete btn btn-primary">Delete</button>
            </form>

        </div>
    </div>




</li>
{{/each}}
</ul>


<script src="/javascript/post.js"></script>